<div class="col-xs-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">Plant Input Data</h1>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table">
          <thead>
            <th>Temperature</th>
            <th>Humidity</th>
            <th>Dew Point</th>
            <th>Time</th>
          </thead>
          <tbody>
            <% @inputs.each do |input| %>
              <tr>
                <td><%= input.temperature %></td>
                <td><%= input.humidity %></td>
                <td><%= input.dewpoint %></td>
                <td><%= input.created_at.strftime("%m-%d-%y %I:%M %p %Z") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Collect Plant Data', collect_inputs_path, class: "btn btn-success btn-lg" %>
